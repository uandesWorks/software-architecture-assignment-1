            sortTable("asc",3)
            salesButton.attributes.state.value = 2
            salesNeutral.classList.toggle("hidden")
            salesUp.classList.toggle("hidden")
        } else{
            if (state == 2){
                sortTable("desc",3)
                salesButton.attributes.state.value = 1
                salesNeutral.classList.toggle("hidden")
                salesDown.classList.toggle("hidden")
            }
        }
        
    })


    

</script>