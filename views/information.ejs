            publishedButton.attributes.state.value = 2
            publishedNeutral.classList.toggle("hidden")
            publishedUp.classList.toggle("hidden")
        } else{
            if (state == 2){
                sortTable("desc",1)
                publishedButton.attributes.state.value = 1
                publishedNeutral.classList.toggle("hidden")
